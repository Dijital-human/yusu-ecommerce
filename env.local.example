# ===========================================
# YUSU E-COMMERCE - LOCAL ENVIRONMENT EXAMPLE
# ===========================================
# Bu fayl local development üçün environment variables nümunəsidir
# This file is an example of environment variables for local development
# Bu faylı .env.local olaraq kopyalayın və dəyərləri doldurun
# Copy this file to .env.local and fill in the values

# ===========================================
# DATABASE CONFIGURATION / VERİTABANI KONFİQURASİYASI
# ===========================================
# PostgreSQL database (Supabase) / PostgreSQL veritabanı (Supabase)
# Connection string-i Supabase Dashboard-dan kopyalayın / Copy connection string from Supabase Dashboard
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres?connection_limit=10&pool_timeout=10&connect_timeout=5"
# və ya local development üçün SQLite / or SQLite for local development
# DATABASE_URL="file:./dev.db"

# ===========================================
# SUPABASE CONFIGURATION / SUPABASE KONFİQURASİYASI
# ===========================================
# Supabase Project URL / Supabase Project URL-i
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_REF].supabase.co"

# Supabase Anon/Public Key (Client-side üçün) / Supabase Anon/Public Key (For client-side)
# Supabase Dashboard → Settings → API → anon public key
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"

# Supabase Service Role Key (Server-side üçün - Təhlükəsizlik üçün vacibdir!) / Supabase Service Role Key (For server-side - Important for security!)
# Supabase Dashboard → Settings → API → service_role key
# ⚠️ DİQQƏT: Bu key-i git-ə commit etməyin! / ⚠️ WARNING: Do not commit this key to git!
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ===========================================
# NEXTAUTH.JS CONFIGURATION / NEXTAUTH.JS KONFİQURASİYASI
# ===========================================
# Local development URL / Local development URL-i
NEXTAUTH_URL="http://localhost:3000"
# Secret key for JWT signing / JWT imzalamaq üçün gizli açar
NEXTAUTH_SECRET="yusu-ecommerce-local-secret-key-2024"

# ===========================================
# OAUTH PROVIDERS / OAUTH PROVIDER-LƏR
# ===========================================
# Google OAuth (Optional for local dev) / Google OAuth (Local dev üçün istəyə bağlı)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth (Optional for local dev) / Facebook OAuth (Local dev üçün istəyə bağlı)
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"

# Apple OAuth (Optional for local dev) / Apple OAuth (Local dev üçün istəyə bağlı)
APPLE_CLIENT_ID="your-apple-client-id"
APPLE_CLIENT_SECRET="your-apple-client-secret"

# ===========================================
# PAYMENT GATEWAY / ÖDƏNİŞ GATEWAY-İ
# ===========================================
# Stripe Test Keys / Stripe Test Açarları
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# ===========================================
# EXTERNAL APIS / XARİCİ API-LƏR
# ===========================================
# Google Maps API (Optional) / Google Maps API (İstəyə bağlı)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ===========================================
# EMAIL CONFIGURATION / EMAIL KONFİQURASİYASI
# ===========================================
# Unified Email Service / Vahid Email Xidməti
RESEND_API_KEY="re_your_resend_api_key"
EMAIL_FROM="onboarding@resend.dev"
TEST_EMAIL="store-test@example.com"

# Optional SMTP fallback / İstəyə bağlı SMTP fallback
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Optional SendGrid fallback / İstəyə bağlı SendGrid fallback
SENDGRID_API_KEY=""

# Legacy fields (uyğunluq üçün)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"

# ===========================================
# REDIS CONFIGURATION / REDIS KONFİQURASİYASI
# ===========================================
# Redis URL for caching / Keşləmə üçün Redis URL-i
REDIS_URL="redis://localhost:6379"

# ===========================================
# APPLICATION SETTINGS / TƏTBİQ TƏNZİMLƏRİ
# ===========================================
# Node environment / Node mühiti
NODE_ENV="development"

# Application port / Tətbiq portu
PORT="3000"

# ===========================================
# SECURITY SETTINGS / TƏHLÜKƏSİZLİK TƏNZİMLƏRİ
# ===========================================
# CORS origins / CORS mənbələri
CORS_ORIGIN="http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003"

# Rate limiting / Rate limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="900000"

# ===========================================
# LOGGING CONFIGURATION / LOGGING KONFİQURASİYASI
# ===========================================
# Log level / Log səviyyəsi
LOG_LEVEL="debug"

# ===========================================
# FILE UPLOAD CONFIGURATION / FAYL YÜKLƏMƏ KONFİQURASİYASI
# ===========================================
# Upload directory / Yükləmə qovluğu
UPLOAD_DIR="./uploads"

# Max file size (in bytes) / Maksimum fayl ölçüsü (bayt)
MAX_FILE_SIZE="10485760"

# Allowed file types / İcazə verilən fayl növləri
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"
